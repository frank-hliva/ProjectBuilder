.TextLabel
    background: #fefefe
    border: 1px solid #dadee1
    padding: 2px 8px
    font-size: 11px
    color: #5c7080
    border-radius: 1px
    opacity: 0.90
    & > .pt-icon
        display: inline-block
        vertical-align: middle
        margin-right: 3px

.CenterLabel
    text-align: center
    
    &::before
        width: 0
        content: ' '
        height: 100%
        vertical-align: middle
        display: inline-block

    & > .TextLabel
        display: inline-block
        width: auto !important
        vertical-align: middle